<script> 

function populateStorage() {
  localStorage.setItem('color', document.getElementById('color').value);
  localStorage.setItem('animal', document.getElementById('animal').value);
  
  viewFavorites();
}

function viewFavorites() {
    var favoriteColor = "blue";
    var favColor = localStorage.getItem('color');
    var favAnimal = localStorage.getItem('animal');
    document.getElementById("viewFavorites").innerHTML="Your favorite color is " + favColor + "<br>Your favorite animal is " + favAnimal;
}

</script>

